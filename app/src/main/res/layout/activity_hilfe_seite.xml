<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/hintergrund"
    tools:context=".HilfeSeite">


    <Button
        android:id="@+id/backBtn"
        android:layout_width="120dp"
        android:layout_height="50dp"
        android:background="@android:color/background_light"
        android:padding="5sp"
        android:textSize="18sp"
        android:text="Zurück"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.050000012" />

    <EditText
        android:id="@+id/hilfeMultiText"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:background="@android:color/background_light"
        android:ems="10"
        android:gravity="start|top"
        android:inputType="textMultiLine"
        android:padding="5sp"
        android:text="In dieser App wird von Gramm oder Mililiter in amerikanische Cups konvertiert. Eine amerikanische Cup fasst ca 240 ml. Das entspricht einer Tasse mit einem Durchmesser von 10 cm und einer Höhe von 6cm.
            \nAchtung: Die Größe einer Cup kann von Land zu Land unterschiedlich sein.\nIn der Historie kannst du alle Berechnungen sehen, die du bereits durchgeführt hast."
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/hilfeHeaderTextView"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:background="@android:color/background_light"
        android:padding="5sp"
        android:textSize="22sp"
        android:layout_marginBottom="20dp"
        android:text="Hilfe"
        android:textColor="@android:color/black"
        android:textAlignment="center"
        app:layout_constraintBottom_toTopOf="@+id/hilfeMultiText"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />
</androidx.constraintlayout.widget.ConstraintLayout>